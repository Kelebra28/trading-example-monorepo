{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["../utils/src/*"]
    }
  },
  "include": ["src"],
  "references": [
    { "path": "../utils" }
  ]
}