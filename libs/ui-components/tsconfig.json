{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@monorepo/utils": ["../../utils/src"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*", "../../utils/src/**/*"],
  "exclude": ["node_modules", "../../utils/src/**/*"]
}