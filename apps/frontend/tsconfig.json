{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@monorepo/domain": ["../../libs/domain/dist/"],
      "@monorepo/domain/*": ["../../libs/domain/dist/*"],
      "@monorepo/ui-components": ["../../libs/ui-components/dist"],
      "@monorepo/ui-components/*": ["../../libs/ui-components/dist/*"],
      "@monorepo/utils": ["../../libs/utils/dist"],
      "@monorepo/utils/*": ["../../libs/utils/dist/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
