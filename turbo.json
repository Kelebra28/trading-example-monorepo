{
    "pipeline": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**", ".next/**"],
        "env": ["NEXT_PUBLIC_API_URL", "NEXT_PUBLIC_SOCKET_URL"]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false,
        "persistent": true,
        "env": ["NEXT_PUBLIC_API_URL", "NEXT_PUBLIC_SOCKET_URL"]
      },
      "test": {
        "dependsOn": ["build"],
        "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*"]
      }
    }
  }