{
  "name": "monorepo",
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "clean": "rm -rf node_modules && rm -rf apps/*/node_modules && rm -rf libs/*/node_modules"
  },
  "packageManager": "yarn@3.6.4",
  "dependencies": {
    "dotenv": "^16.4.7",
   "turbo": "latest"
  }
}
